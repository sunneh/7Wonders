<Window x:Class="SevenWondersGUI.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Rules" Height="902" Width="778" Name="rulesWindow" Topmost="True" WindowStartupLocation="CenterScreen" Icon="/SevenWondersGUI;component/Images/icon.png">
    <Grid Name="ruleGrid" Height="Auto" Width="Auto" Background="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*" />
            <RowDefinition Height="812*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="0" />
            <ColumnDefinition Width="481*" />
        </Grid.ColumnDefinitions>
        <Image Height="Auto" HorizontalAlignment="Left" Margin="0,59,0,0" Name="image" Stretch="UniformToFill" VerticalAlignment="Top" Width="Auto" Panel.ZIndex="1" OpacityMask="{x:Null}" Grid.Row="1"></Image>
        <Button Content="Prev Page" Height="35" HorizontalAlignment="Left" Margin="32,12,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="buttonPrev_Click" />
        <Button Content="Next Page" Height="35" HorizontalAlignment="Left" Margin="163,12,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="buttonNext_Click" />
    </Grid>
</Window>
