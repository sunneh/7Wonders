<Window x:Class="SevenWondersGUI.WaitingOnConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connecting" Height="200" Width="472" Name="ConnectionWindow">
    <Grid Background="#FFD1EBFF">
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="360,126,0,0" Name="cancelButton" VerticalAlignment="Top" Width="75" Click="cancelButton_Click">
            <Button.Background>
                <ImageBrush />
            </Button.Background>
        </Button>
        <ProgressBar Height="23" HorizontalAlignment="Left" Margin="32,80,0,0" Name="progressBar" VerticalAlignment="Top" Width="403" ValueChanged="progressBar_ValueChanged" />
        <Label Content="Trying To Connect To Host..." Height="42" HorizontalAlignment="Left" Margin="32,24,0,0" Name="ConnectingToHostLabel" VerticalAlignment="Top" Width="295" FontSize="22" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="207,126,0,0" Name="comboBox1" VerticalAlignment="Top" Width="120" DataContext="{Binding}" DisplayMemberPath="ggg" Text="gggddfds" ItemsSource="{Binding}">
            <ComboBoxItem Content="hi" />
            <ComboBoxItem Content="there" />
        </ComboBox>
    </Grid>
</Window>
